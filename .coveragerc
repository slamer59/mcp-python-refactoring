# Coverage configuration for mcp-python-refactoring

[run]
source = src/mcp_refactoring_assistant
omit = 
    */tests/*
    */test_*.py
    */__pycache__/*
    */migrations/*
    */venv/*
    */virtualenv/*
    */.tox/*
    */server_old.py
    setup.py

# Include branch coverage
branch = True

# Parallel processing support
parallel = True

[report]
# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run:
    if 0:
    if __name__ == .__main__.:

    # Don't complain about abstract methods, they aren't run:
    @(abc\.)?abstractmethod

    # Don't complain about protocol methods
    class .*\bProtocol\):

    # Don't complain about type checking imports
    if TYPE_CHECKING:

    # Don't complain about platform-specific code
    if sys.platform

# Show missing lines in coverage report
show_missing = True

# Don't include lines that are 100% covered
skip_covered = False

# Precision for percentages
precision = 2

# Sort by coverage percentage (lowest first)
sort = Cover

[html]
directory = htmlcov
title = MCP Python Refactoring Coverage Report

[xml]
output = coverage.xml

[json]
output = coverage.json